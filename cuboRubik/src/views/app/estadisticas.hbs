    // Obtén una referencia al elemento del switch
    const switchElement = document.getElementById('selector-switch');

    // Agrega un evento de cambio al switch
    switchElement.addEventListener('change', function() {
        // Verifica si el switch está marcado o desmarcado
        if (this.checked) {
            // El switch está marcado, realiza acciones para la opción "Principal"
            // Por ejemplo, muestra la sección principal y oculta la sección lista
            document.getElementById('seccion-principal').style.display = 'block';
            document.getElementById('seccion-lista').style.display = 'none';
        } else {
            // El switch está desmarcado, realiza acciones para la opción "Lista"
            // Por ejemplo, muestra la sección lista y oculta la sección principal
            document.getElementById('seccion-lista').style.display = 'block';
            document.getElementById('seccion-principal').style.display = 'none';
